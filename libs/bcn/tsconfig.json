{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "./build",
        "jsx": "react",
        "strict": false,
        "noImplicitAny": true,
        "removeComments": true,
        "allowJs": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "downlevelIteration": true,
        "lib": ["dom", "es2015", "es2016", "es2017"],
        "baseUrl": "./"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
